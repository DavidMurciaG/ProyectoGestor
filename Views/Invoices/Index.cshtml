@model IEnumerable<ProyectoGestor.Models.Invoice>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de Facturas</h1>

<p>
    <a asp-action="Create" class="btn btn-success" style="width:auto"><i class="far fa-plus-square"></i> Crear nueva factura</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumInvoice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsPaid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.OrderID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NumInvoice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsPaid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order.OrderID)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-primary" style="width:auto">Editar <i class="fas fa-edit"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger" style="width:auto">Borrar <i class="fa fa-trash-alt fa-lg"></i></a>
                    <a asp-action="" asp-route-id="@item.ID" class="btn btn-warning" style="width:auto">Pagar <i class="fas fa-credit-card"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>